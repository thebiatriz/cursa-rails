<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-grid gap-3">
    <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
    </div>

    <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
    </div>

    <div>
    <%= form.label :birthday, style: "display: block" %>
    <%= form.date_field :birthday %>
    </div>

    <div>
    <%= form.label :obs, style: "display: block" %>
    <%= form.textarea :obs %>
    </div>

    <div class="mt-2">
    <%= form.submit "Salvar", class: "btn btn-outline-primary" %>
    </div>
  </div>
<% end %>
