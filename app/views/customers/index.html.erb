<p style="color: green"><%= notice %></p>

<% content_for :title, "Customers" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= t('.title') %></h1>

  <div>
    <%= link_to t('.back_home'), root_path, class: "btn btn-outline-secondary me-2" %>
    <%= link_to t('.new_link'), new_customer_path, class: "btn btn-primary" %>
  </div>
</div>

<div id="customers">
  <% @customers.each do |customer| %>
    <%= render customer %>
    <p>
      <%= link_to t('.show_link'), customer %>
    </p>
  <% end %>
</div>